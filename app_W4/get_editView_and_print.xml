<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.myapplication.MainActivity">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#AEC"
        android:text="@string/my_name"
        android:textColor="#78C"
        android:textSize="30sp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_below="@id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/tvIdName"
                android:layout_weight="3"
                />

            <EditText
                android:id="@+id/edIdname"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="@string/ednameHint"
                android:inputType="text"
                android:layout_weight="1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:text="@string/birthday" />

            <EditText
                android:id="@+id/edIdBir"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="@string/edbirthdayHint"
                android:inputType="date"
                android:layout_weight="1"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvContent"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/getData"
        android:text="列印"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button

        android:id="@+id/btSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/small" />

    <Button
        android:id="@+id/btEnlarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/large" />

</RelativeLayout>
